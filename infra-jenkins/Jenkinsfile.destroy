pipeline {
    agent any
    environment {
        AWS_REGION = "ap-south-1"
    }

    stages {
        stage('Terraform Init') {
            steps {
                dir('infra-jenkins') {
                    bat "terraform init -upgrade"
                }
            }
        }

        stage('Terraform Destroy') {
            steps {
                dir('infra-jenkins') {
                    bat "terraform destroy -auto-approve"
                }
            }
        }
    }

    post {
        success {
            echo "Infrastructure destroyed successfully!"
        }
        failure {
            echo "Destroy operation failed!"
        }
    }
}